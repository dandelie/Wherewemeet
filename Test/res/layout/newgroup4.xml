<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:id="@+id/custombar" >

        <ImageButton
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:src="@drawable/home"
            android:onClick="home"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new4t"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:textSize="25dp"
            android:textStyle="bold"  />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:src="@drawable/setting"
            android:onClick="setting"/>

    </RelativeLayout>




    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/new4a"
        android:id="@+id/button2"
        android:layout_below="@+id/title2"
        android:layout_marginTop="120dp"
        android:background="@drawable/buttonw"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="new4a"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/new4b"
        android:id="@+id/button3"
        android:background="@drawable/buttonw"
        android:layout_below="@+id/button2"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="new4b"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/new4c"
        android:id="@+id/button4"
        android:background="@drawable/buttonw"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="new4c"/>

</RelativeLayout>