<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/custombar" >

        <ImageButton
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:src="@drawable/home"
            android:onClick="home"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/removeid"
            android:id="@+id/setremove"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:textSize="25dp"
            android:textStyle="bold"  />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:src="@drawable/setting"
            android:onClick="setting"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_cornerb"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/custombar"
        android:id="@+id/relativeLayout">
        >
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/removeidhint"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/user"
            android:layout_below="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="@string/login1"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/userEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/user"
            android:hint="@string/IDhint"
            />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:paddingTop="16dp"
            android:text="@string/login2"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/passwordEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/password"
            android:hint="@string/PWhint"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/password"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/password"
            android:drawablePadding="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/removeidnot"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="removeidnot"
            android:background="@drawable/buttonp"/>

        <Button
            android:id="@+id/exit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/removeidgo"
            android:layout_below="@+id/password"
            android:layout_alignRight="@+id/passwordEntry"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="2dp"
            android:onClick="removeidgo"
            android:background="@drawable/buttonp"/>

    </RelativeLayout>
</RelativeLayout>