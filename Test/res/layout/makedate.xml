<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/custombar" >

        <ImageButton
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:src="@drawable/home"
            android:onClick="home"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Date"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:textSize="25dp"
            android:textStyle="bold"  />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:src="@drawable/setting"
            android:onClick="setting"/>

    </RelativeLayout>



 

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custombar"
        android:layout_margin="20dp"
        android:background="#aaffffff"
        android:padding="10dp"
        android:id="@+id/relativeLayout">
        >
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Date2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:paddingTop="4dp"
            android:text="@string/Datesb"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/dateDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user"
            android:textSize="17dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/user"
            android:hint="@string/Datehint"
            />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:paddingTop="16dp"
            android:text="@string/puttime"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/passwordEntry"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/password"
            android:textSize="16dp"
            android:hint="@string/Datehint2"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/password"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/Dateb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dateb"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/user"
            android:background="@drawable/buttonp"
            android:layout_toRightOf="@+id/passwordEntry"
            android:layout_toEndOf="@+id/passwordEntry" />

        <TextView
            android:id="@+id/datehint3"
            android:text="@string/datehint3"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/password"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/datehint3"
            android:id="@+id/linearLayout">


            <Button
                android:id="@+id/pickDate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/pickDate"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonp"
                />

            <Button
                android:id="@+id/makemeetgo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/roommeetgon"
                android:background="@drawable/buttonp"
                android:onClick="makemeetgo"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>